<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="DefaultTheme">
        <!-- OPEN WINDOW THEME EDITOR -->
    </style>

    <style name="RoundedTextField" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">@drawable/rounded_textfield</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginTop">100dp</item>
    </style>

    <style name="PrimaryButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/primary_button</item>
    </style>

    <style name="SecondaryButton" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@drawable/secondary_button</item>
        <item name="android:textColor">@color/accent_material_dark_1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DefaultTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/accent_material_dark_1</item>
    </style>

</resources>
